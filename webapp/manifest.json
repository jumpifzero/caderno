{
  "_version": "1.8.0",
  "sap.app": {
    "id": "jz.caderno",
    "type": "application",
    "i18n": "i18n/i18n.properties",
    "applicationVersion": {
      "version": "1.0.0"
    },
    "title": "{{appTitle}}",
    "description": "{{appDescription}}",
    "sourceTemplate": {
      "id": "ui5template.basicSAPUI5ApplicationProject",
      "version": "1.40.12"
    }
  },

  "sap.ui": {
    "technology": "UI5",
    "icons": {
      "icon": "",
      "favIcon": "",
      "phone": "",
      "phone@2": "",
      "tablet": "",
      "tablet@2": ""
    },
    "deviceTypes": {
      "desktop": true,
      "tablet": true,
      "phone": true
    },
    "supportedThemes": [
      "sap_hcb",
      "sap_belize"

    ]
  },

  "sap.ui5": {
    "rootView": {
      "viewName": "jz.caderno.view.App",
      "type": "XML",
      "async": true
    },
    "dependencies": {
      "minUI5Version": "1.30.0",
      "libs": {
	"sap.ui.layout": {},
	"sap.ui.core": {},
	"sap.m": {}
      }
    },
    "contentDensities": {
      "compact": true,
      "cozy": true
    },
    "models": {
      "i18n": {
	"type": "sap.ui.model.resource.ResourceModel",
	"settings": {
	  "bundleName": "jz.caderno.i18n.i18n"
	}
      }
    },
    "resources": {
      "js": [
        {"uri": "bower_components/simplemde/dist/simplemde.min.js"},
        {"uri": "bower_components/simplemde/dist/simplemde.min.js"}
      ],
      "css": [
        {"uri": "css/style.css"},
        {"uri": "bower_components/simplemde/dist/simplemde.min.css"},
        {"uri": "bower_components/highlightjs/styles/monokai.css"},
        {"uri": "bower_components/components-font-awesome/css/fontawesome-all.min.css"}
      ]
    },
    "routing": {
      "config": {
	"routerClass": "sap.m.routing.Router",
	"viewType": "XML",
	"async": true,
	"viewPath": "jz.caderno.view",
	"controlId": "splitApp",
	"controlAggregation": "detailPages"
      },
      "routes": [
        {
          "pattern": "note-edit/{noteId}",
          "name": "note-edit",
          "target": ["notesMaster", "noteEdit"]
        },
        {
	  "pattern": "notes",
	  "name": "notes",
	  "target": ["notesMaster", "notesDetailInitial"]
	},
        {
	  "pattern": "settings",
	  "name": "settings",
	  "target": ["notesMaster", "settings"]
	}
      ],
      "targets": {
	"notesMaster": {
	  "viewType": "XML",
	  "transition": "slide",
	  "clearAggregation": true,
	  "viewName": "NotesMaster",
          "viewId": "notesMaster",
	  "controlAggregation": "masterPages"
	},
        "notesDetailInitial": {
	  "viewName": "NotesDetailInitial",
	  "viewId": "notesDetailInitial",
	  "viewLevel": 2
	},
        "noteEdit":{
          "viewName": "NoteEdit",
	  "viewLevel": 2
        },
        "settings":{
          "viewName": "Settings",
	  "viewLevel": 2
        }
      }
    }
  }
}
