{
	"_version": "1.8.0",
	"sap.app": {
		"id": "jz.caderno",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"sourceTemplate": {
			"id": "ui5template.basicSAPUI5ApplicationProject",
			"version": "1.40.12"
		}
	},

	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "",
			"favIcon": "",
			"phone": "",
			"phone@2": "",
			"tablet": "",
			"tablet@2": ""
		},
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		},
		"supportedThemes": [
			"sap_hcb",
			"sap_belize"

		]
	},

	"sap.ui5": {
		"rootView": {
			"viewName": "jz.caderno.view.App",
			"type": "XML",
            "async": true
		},
		"dependencies": {
			"minUI5Version": "1.30.0",
			"libs": {
				"sap.ui.layout": {},
				"sap.ui.core": {},
				"sap.m": {}
			}
		},
		"contentDensities": {
			"compact": true,
			"cozy": true
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "jz.caderno.i18n.i18n"
				}
			}
		},
		"resources": {
			"css": [{
				"uri": "css/style.css"
			}]
		},
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"async": true,
				"viewPath": "jz.caderno.view",
				"controlId": "splitApp",
			    "controlAggregation": "detailPages"
			},
			"routes": [
                {
			        "pattern": "notes",
			        "name": "notes",
			        "target": ["notesMaster", "notesDetailInitial"]
		        }
            ],
			"targets": {
				"notesMaster": {
					"viewType": "XML",
					"transition": "slide",
					"clearAggregation": true,
					"viewName": "NotesMaster",
                    "viewId": "notesMaster",
				    "controlAggregation": "masterPages"
				},
                "notesDetailInitial": {
				    "viewName": "NotesDetailInitial",
				    "viewId": "notesDetailInitial",
				    "viewLevel": 2
			    }
			}
		}
	}
}
