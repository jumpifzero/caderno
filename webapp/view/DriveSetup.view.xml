<mvc:View
    controllerName="jz.caderno.controller.DriveSetup"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:layout="sap.ui.layout"
    xmlns:cust="jz.caderno.control"
    xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">
  <Page
      showHeader="false"
      showSubHeader="false"
      showFooter="false"
      class="apiDetailPage">
    <content>
      <Wizard id="driveSetupWizard"
	      complete="onWizardCompleted"
	      enableBranching="true">

	<WizardStep
	    title="{i18n>drive.setup.authorize.title}"
	    subsequentSteps="DriveExperienceBranchStep"
	    icon="sap-icon://shield">
	  <Text width="100%"
                class="sapUiSmallMarginBottom"
		text="Caderno can save your notes on Google Drive allowing you to view and edit them on any computer or browser. \nTo do this, it needs your permission to store and read notes from a single folder.\nDon't worry, we'll never fiddle with anything outside this folder.\nPress the button below to make google ask you if you authorize Caderno."/>
	  <Button type="Accept"
                  text="{i18n>drive.setup.authorize.button}" action="doStartAuthorization" />
	</WizardStep>

	<WizardStep
            id="DriveExperienceBranchStep"
	    title="{i18n>drive.setup.firstOrReturn.title}"
	    subsequentSteps="FirstTimeSetupStep, ReturningSetupStep"
	    complete="goToPaymentStep"
	    icon="sap-icon://money-bills">
	  <Text class="sapUiSmallMarginBottom"
		text="Thanks for authorizing Caderno to store data on your Drive :-)\nWe're almost there.. One more question so we know if it needs to import anything from Drive:\n\nIs this is the first time you're doing this setup or if have you done this before (perhaps on a different computer?)"/>
	  <HBox
	      alignItems="Center"
	      justifyContent="Center"
	      width="100%">
	    <SegmentedButton select="setDriveExperience" selectedKey="{/selectedPayment}">
	      <items>
		<SegmentedButtonItem key="firstTime"
                                     icon="sap-icon://activate"
                                     text="{i18n>drive.setup.firstTime.button}" />
		<SegmentedButtonItem key="returning"
                                     icon="sap-icon://action-settings"
                                     text="{i18n>drive.setup.returning.button}" />

	      </items>
	    </SegmentedButton>
	  </HBox>
	</WizardStep>
        <WizardStep
            id="FirstTimeSetupStep"
	    title="{i18n>drive.setup.firstTime.title}"
	    icon="sap-icon://activate">
	</WizardStep>
         <WizardStep
            id="ReturningSetupStep"
	    title="{i18n>drive.setup.returning.title}"
	    icon="sap-icon://action-settings">
	</WizardStep>
      </Wizard>
    </content>
  </Page>
</mvc:View>
