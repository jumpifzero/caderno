<mvc:View
	height="100%"
	width="100%"
	controllerName="jz.caderno.controller.NoteEdit"
	xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:cust="jz.caderno.control">
  <Page id="topicDetailPage"
	showHeader="false"
	class="sapUiNoContentPadding"
        floatingFooter="false">
    <content>
      <ObjectPageLayout id="apiDetailObjectPage"
			enableLazyLoading="true"
			showAnchorBarPopover="true"
			upperCaseAnchorBar="false"
			busyIndicatorDelay="0">
        <Input value="{view>/note/name}" placeholder="{i18n>note.edit.name.placeholder}" />
      </f:SimpleForm>

      <cust:Simplemde
          edit="false"
          content="{view>/note/content}"
          save="doSaveNote" />
    </content>
    <footer>
	<OverflowToolbar>
          <Label text="Saved note" />
	  <ToolbarSpacer/>
	  <Button type="Accept" text="Accept"/>
	</OverflowToolbar>
      </footer>
  </Page>
</mvc:View>
