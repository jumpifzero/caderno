<mvc:View controllerName="jz.caderno.controller.App"
	  displayBlock="true"
          xmlns:html="http://www.w3.org/1999/xhtml"
          xmlns="sap.m"
          xmlns:core="sap.ui.core"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:tnt="sap.tnt">
  <Page
      showHeader="false"
      enableScrolling="false"
      showNavButton="false"
      id="app">
    <content>
      <tnt:ToolHeader id="headerToolbar">
        <ToolbarSpacer visible="{= ${device>/system/phone} || !${appView>/bPhoneSize}}">
	  <layoutData>
	    <OverflowToolbarLayoutData priority="NeverOverflow" minWidth="{= ${device>/system/tablet} ? '' : '1rem'}" />
	  </layoutData>
	</ToolbarSpacer>
        <Button text="{i18n>toolbar.btn.note.new}"
                press=".doCreateNote"/>
        <Button text="{i18n>toolbar.btn.drive.setup}"
                press=".doDriveSetup"/>
        <core:Icon src="sap-icon://user-settings"
                   press=".doEditSettings"/>
      </tnt:ToolHeader>
      <SplitApp id="splitApp"
		defaultTransitionNameDetail="show"
		defaultTransitionNameMaster="show">
      </SplitApp>
    </content>
  </Page>
</mvc:View>
