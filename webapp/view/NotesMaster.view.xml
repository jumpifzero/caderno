<mvc:View
    controllerName="jz.caderno.controller.NotesMaster"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    class="sapContrast sapContrastPlus">
  <Page
      enableScrolling="true"
      showFooter="true"
      navButtonPress="onNavBack"
      showNavButton="false"
      class="sapUiDocumentationMasterPage">

    <customHeader>
      <Toolbar width="100%">
	<SearchField id="searchField" placeholder="Filter" liveChange="onTreeFilter" class="sapUiDocumentationFilterField"></SearchField>
      </Toolbar>
    </customHeader>

    <content>
      <List
	  id="tree"
	  mode="SingleSelectMaster"
	  selectionChange="onNodeSelect"
	  items="{ path: 'data>/notes' }">
	<StandardListItem
	    title="{data>title}"
	    selected="{data>isSelected}">
	  <customData>
	    <core:CustomData key="nodeId" value="TODO" />
	  </customData>
	</StandardListItem>
      </List>

    </content>

    <footer>
      <Toolbar>
	<Button type="Accept" text="Accept"/>
      </Toolbar>
    </footer>

  </Page>

</mvc:View>
