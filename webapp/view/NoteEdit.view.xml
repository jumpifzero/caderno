<mvc:View
	height="100%"
	width="100%"
	controllerName="jz.caderno.controller.NoteEdit"
	xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:cust="jz.caderno.control">
  <Page id="topicDetailPage"
	showHeader="false"
	class="sapUiNoContentPadding">
    <content>
      <f:SimpleForm
          layout="ResponsiveGridLayout"
		  title="New Note"
		  labelSpanXL="3"
		  labelSpanL="3"
		  labelSpanM="3"
		  labelSpanS="12"
		  adjustLabelSpan="false"
		  emptySpanXL="4"
		  emptySpanL="4"
		  emptySpanM="4"
		  emptySpanS="0"
		  columnsXL="1"
		  columnsL="1"
		  columnsM="1"
		  singleContainerFullSize="false" >
        <Input value="{view>/note/name}" placeholder="{i18n>note.edit.name.placeholder}" />
      </f:SimpleForm>

      <cust:Simplemde
          content="{view>/note/content}"
          save="doSaveNote" />

    </content>
  </Page>
</mvc:View>
